<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/nuspicebg">

    <!-- TextView to display the generated response -->

    <!-- Input and button section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_cream_background"
        android:padding="8dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="4dp"
            android:text="Respon Nu Spice..."
            android:textColor="@color/black"
            android:textSize="16sp" />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <!-- EditText for user input -->
        <EditText
            android:id="@+id/editTextPrompt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Tanya Nu Spice..."
            android:background="@drawable/edit_text_bg"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:imeOptions="actionSend" />

        <!-- Send Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Kirim"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</LinearLayout>
